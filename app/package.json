{
  "name": "clogs",
  "version": "1.0.0",
  "private": true,
  "description": "CLOGS - A common logging API for writing logs",
  "scripts": {
    "build": "echo Nothing to build",
    "serve": "./node_modules/.bin/nodemon ./bin/www",
    "start": "node ./bin/www",
    "lint": "node_modules/.bin/eslint . --no-fix --ext .js",
    "lint:fix": "node_modules/.bin/eslint . --fix --ext .js",
    "test": "node_modules/.bin/jest --verbose --no-cache",
    "clean": "rm -rf coverage dist",
    "pretest": "npm run lint",
    "purge": "rm -rf node_modules",
    "rebuild": "npm run clean && npm run build",
    "reinstall": "npm run purge && npm install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bcgov/common-logging.git"
  },
  "author": "NR Common Service Showcase <NR.CommonServiceShowcase@gov.bc.ca>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/bcgov/common-logging/issues"
  },
  "homepage": "https://bcgov.github.io/common-logging",
  "dependencies": {
    "api-problem": "^6.0.1",
    "async": "^3.1.1",
    "atob": "^2.1.2",
    "axios": "^0.21.1",
    "bytes": "^3.1.0",
    "compression": "^1.7.4",
    "config": "^3.2.4",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "keycloak-connect": "^8.0.1",
    "moment": "^2.24.0",
    "morgan": "^1.9.1",
    "npmlog": "^4.1.2",
    "oniguruma": "^7.2.1",
    "uuid": "^3.3.3",
    "validator": "^12.1.0",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "jest": "^24.9.0",
    "jest-sonar-reporter": "^2.0.0",
    "nodemon": "^2.0.2",
    "supertest": "^4.0.2"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "commonjs": true,
      "es6": true,
      "jest": true,
      "node": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly",
      "_": false
    },
    "parserOptions": {
      "ecmaVersion": 9
    },
    "rules": {
      "eol-last": [
        "error",
        "always"
      ],
      "indent": [
        "error",
        2,
        {
          "SwitchCase": 1
        }
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "always"
      ]
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "testMatch": [
      "**/tests/**/*.spec.(js|jsx|ts|tsx)|**/__tests__/*.(js|jsx|ts|tsx)"
    ],
    "testURL": "http://localhost/",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/docs/*.*",
      "!src/grok/*.*",
      "!src/middleware/*.*"
    ],
    "testResultsProcessor": "jest-sonar-reporter"
  },
  "jestSonar": {
    "reportPath": "coverage"
  }
}
